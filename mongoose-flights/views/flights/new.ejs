
<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav')  %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-input" value="n/a">
    <option value="american">American</option>
      <option value="southwest">Southwest</option>
      <option value="united">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="den">DEN</option>
      <option value="dfw">DFW</option>
      <option value="lax">LAX</option>
      <option value="san">SAN</option>
    </select>
    <label for="flightNo-input">Flight Number:</label>
    <input type="number" name="flightNo" id="flightNo-input" min="10" max="9999">
    <label for="departs-input">Departure Date:</label>
    <input type="datetime-local" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer")  %>